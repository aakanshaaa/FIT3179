
{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 450,
    "height": 450,
    "title": "Total Domestic Cargo Flights for Major Cities (2014-2024)",
    "projection": {"type": "mercator"},
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/aakanshaaa/FIT3179/refs/heads/main/ne.json",
          "format": {"type": "topojson", "feature": "ne_50m_admin_1_states_provinces"}
        },
        "mark": {"type": "geoshape", "fill": "lightblue", "stroke": "steelblue"}
      },
        {
        "data": {
          "url": "https://raw.githubusercontent.com/aakanshaaa/FIT3179/refs/heads/main/ne.json",
          "format": {"type": "topojson", "feature": "ne_110m_graticules_5"}
        },
        "mark": {"type": "geoshape", "fill": null, "stroke": "darkgray"}
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/aakanshaaa/FIT3179/refs/heads/main/dom_cargo_web.csv",
          "format": {"type": "csv"}
        },
         "transform": [
          {"joinaggregate": [{
          "op": "sum",
          "field": "Value",
          "as": "TotalFlights"
          }],
          "groupby": ["Location"]
          },
          {
          "joinaggregate": [{
              "op": "sum",
              "field": "Value",
              "as": "Allflights"
          }],
          
          "groupby": ["Total domestic network"]
        },
        {
          "calculate": "datum.TotalFlights/datum.Allflights *100", 
          "as": "egg"
        },
        {"filter": "isValid(toNumber(datum.Latitude))"}
          
          ],
        "mark": {"type": "circle","stroke":"black"},
        "encoding": {
            "longitude": {"field": "Longitude", "type": "quantitative"},
            "latitude": {"field": "Latitude", "type": "quantitative"},
            "tooltip": [
            {"field": "Location", "type": "nominal", "title": "Location"},
            {"field": "egg", "type": "quantitative", "title": "Percentage of Total (%)","format":".2f"}
          ],
            "size": {
              "field": "egg",
              "type": "quantitative"
            },
            "color": {
            "field": "egg",
            "type": "quantitative",
            "title": "Number of Flights",
            "scale": {"scheme": "reds"}
          }
        }
    }

    ]
  }
