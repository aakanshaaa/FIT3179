{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 450,
    "title": "Domestic Cargo Flights for Major Cities - 2014-2024",
    "projection": {"type": "mercator"},
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/aakanshaaa/FIT3179/refs/heads/main/ne.json?token=GHSAT0AAAAAACVPNQHW2VXEAHDF6H4WKRYAZXQCPNA",
          "format": {"type": "topojson", "feature": "ne_50m_admin_1_states_provinces"}
        },
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "darkgray"}
      },
        {
        "data": {
          "url": "https://raw.githubusercontent.com/aakanshaaa/FIT3179/refs/heads/main/ne.json?token=GHSAT0AAAAAACVPNQHW2VXEAHDF6H4WKRYAZXQCPNA",
          "format": {"type": "topojson", "feature": "ne_110m_graticules_5"}
        },
        "mark": {"type": "geoshape", "fill": null, "stroke": "darkgray"}
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/aakanshaaa/FIT3179/refs/heads/main/dom_cargo_web.csv?token=GHSAT0AAAAAACVPNQHXJISLAZBSS5IOV5KYZXQCLFA",
          "format": {"type": "csv"}
        },
         "transform": [
          {"filter": "isValid(toNumber(datum.Latitude))"},
          {"joinaggregate": [{
          "op": "sum",
          "field": "Value",
          "as": "Total Flights"
          }],
          "groupby": ["Location"]
          }
          
          ],
        "mark": {"type": "circle", "fill": "blueviolet", "stroke": "null"},
        "encoding": {
            "longitude": {"field": "Longitude", "type": "quantitative"},
            "latitude": {"field": "Latitude", "type": "quantitative"},
            "tooltip": [
            {"field": "Location", "type": "nominal", "title": "Location"},
            {"field": "Total Flights", "type": "quantitative", "title": "Total Flights"}
          ],
            "size": {
              "field": "Total Flights",
              "type": "quantitative",
              "title": "Number of flights"
            }
        }
    }

    ]
  }
