{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 600,
  "height": 600,
  "title": "Click City to view Flight paths- double click to reset",
  "projection": {"type": "mercator"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/aakanshaaa/FIT3179/refs/heads/vis2/ne.json",
        "format": {
          "type": "topojson",
          "feature": "ne_50m_admin_1_states_provinces"
        }
      },
      "mark": {"type": "geoshape", "fill": "lightblue", "stroke": "white"}
    },
 {
      "mark": {"type": "rule", "color": "#a5a4afb7", "opacity": 0.35},
      "data": {
        "url": "https://raw.githubusercontent.com/aakanshaaa/FIT3179/refs/heads/vis2/assignmentdata.csv",
        "format": {"type": "csv"}
      },
      "transform": [
        {"filter": {"param": "org", "empty": false}},
        {
          "lookup": "City1",
          "from": {
            "data": {"url":  "https://raw.githubusercontent.com/aakanshaaa/FIT3179/refs/heads/vis2/assignmentdata.csv"},
            "key": "City1",
            "fields": ["Lat1", "Long1"]
          }
        },
        {
          "lookup": "City2",
          "from": {
            "data": {"url":  "https://raw.githubusercontent.com/aakanshaaa/FIT3179/refs/heads/vis2/assignmentdata.csv"},
            "key": "City2",
            "fields": ["Lat2", "Long2"]
          },
          "as": ["lat2", "lon2"]
        }
      ],
      "encoding": {
        "latitude": {"field": "Lat1"},
        "longitude": {"field": "Long1"},
        "latitude2": {"field": "lat2"},
        "longitude2": {"field": "lon2"}
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/aakanshaaa/FIT3179/refs/heads/vis2/assignmentdata.csv",
        "format": {"type": "csv"}
      },
      "transform": [
         {"filter": {"param": "org", "empty": false}}

      ],
      "mark": {"type": "circle","color":"indianred","size":50},
      "encoding": {
        "longitude": {"field": "Long2", "type": "quantitative"},
        "latitude": {"field": "Lat2", "type": "quantitative"},
        "tooltip": [
          {"field": "City2", "type": "nominal", "title": "Destination"},
          {"field": "State2", "type": "nominal", "title": "State"}

         
        ],
        "color": {
          "legend":null
        }
      }
      
    },
     {
      "mark": {"type": "circle","color":"steelblue"},
      "data": {
        "url": "https://raw.githubusercontent.com/aakanshaaa/FIT3179/refs/heads/vis2/assignmentdata.csv",
        "format": {"type": "csv"}
      },
      "transform": [
        {"aggregate": [{"op": "count", "as": "routes"}], "groupby": ["City1","City2"]},
        {"joinaggregate": [{"op": "count", "as": "routes"}], "groupby": ["City1"]},
        {
          "lookup": "City1",
          "from": {
            "data": {"url": "https://raw.githubusercontent.com/aakanshaaa/FIT3179/refs/heads/vis2/assignmentdata.csv"},
            "key": "City1",
            "fields": ["Lat1","Long1","State1"]
          }
        },
        {"filter": {
          "or":[
            {"field": "City1", "equal":"Melbourne"},
            {"field": "City1", "equal":"Sydney"},
            {"field": "City1", "equal":"Perth"},
            {"field": "City1", "equal":"Adelaide"},
            {"field": "City1", "equal":"Canberra"},
            {"field": "City1", "equal":"Darwin"},
            {"field": "City1", "equal":"Brisbane"},
            {"field": "City1", "equal":"Hobart"}

          ]

        }}
      ],
      "params": [{
        "name": "org",
        "select": {
          "type": "point",
          "on": "click",
          "nearest": false,
          "fields": ["City1"]
        }
      }],
      "encoding": {
        "latitude": {"field": "Lat1"},
        "longitude": {"field": "Long1"},
        "size": {
          "field": "routes",
          "type": "quantitative",
          "scale": {"rangeMax": 1000},
          "title":"Number of Routes",
            "legend": {
          "title": "Number of Routes",
          "symbolFillColor": "steelblue"
      }
        },
        "order": {
          "field": "routes",
          "sort": "descending"
        },
      "opacity":{
        "condition": {
            "param": "org",
            "value":1},
            "value":0

      },
       "tooltip": [
          {"field": "City1", "type": "nominal", "title": "City"},
          {"field": "State1", "type": "nominal", "title": "State"},
          {"field": "routes", "type": "quantitative", "title": "Routes"}
         
        ]
      }
    }

  ],
  "config": {"view": {"stroke": null}}
}
