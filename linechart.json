
{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 1000,
    "height": 300,
    "title": "Domestic Flights through Capital Cities",
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/aakanshaaa/FIT3179/refs/heads/vis2/assignmentdata.csv",
          "format": {"type": "csv"}
        },
        "transform": [
          {"joinaggregate": [{"op": "sum","field": "Aircraft_Trips","as": "Monthly_Trips"}
          ],
          "groupby": ["City1","Month"]},
          {
            "calculate": "'Shift select for muliple cities'","as":"labell"
          },
          {"filter": {
            "or":[
              {"field": "City1", "equal":"Melbourne"},
              {"field": "City1", "equal":"Sydney"},
              {"field": "City1", "equal":"Perth"},
              {"field": "City1", "equal":"Adelaide"},
              {"field": "City1", "equal":"Canberra"},
              {"field": "City1", "equal":"Darwin"},
              {"field": "City1", "equal":"Brisbane"},
              {"field": "City1", "equal":"Hobart"}

            ]
          }}

         ],
        "mark": {"type": "line"},
        "encoding": {
            "x": {"field":"Month","timeUnit": "yearmonth",
            "axis": {"title": "Year","grid": true,"tickCount": "year"}
            },
            "y": {
            "field": "Monthly_Trips",
            "type":"quantitative",
            "axis": {"title": "Flights","grid": false}
            },
            "tooltip": [
            {"field": "City1", "type": "nominal", "title": "Location"},
            {"field": "Monthly_Trips", "type": "quantitative", "title": "Flights","format":","},
            {"field": "Month", "timeUnit":"yearmonth"}
            
          ]
          ,
            "color": {
            "field": "City1",
            "type": "nominal",
            "title": "Select City:",
            "scale": {"scheme": "category20"},
            "legend":{"title": ["Select City:","Shift to compare "]
            }
          },
          "opacity": {
              "condition": {
                "selection": "locationSelector",
                "value": 1
              },
              "value": 0
            }
        },
          "selection": {
          "locationSelector": {
            "type": "multi",
            "fields": ["City1"],
            "bind": "legend"
          }
        }
        
    },
    {
      "data": {"values": [{}]},
      "mark": {"type": "rule", "stroke":"black", "size": 2},
      "encoding": {"x": {"datum": {"year": "2020"}}}
    },
     {
      "data": {"values": [{}]},
      "mark": {"type": "rule", "stroke":"black", "size": 2},
      "encoding": {"x": {"datum": {"year": 2022}}}
    },
    {
      "data": {"values": [{}]},
      "mark": {"type": "rule", "stroke":"black", "size": 2},
      "encoding": {"x": {"datum": {"year": 2022}}}
    }
    

    ]
  }
